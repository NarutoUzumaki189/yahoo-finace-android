<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent" android:layout_height="match_parent">


        <TextView
            android:id="@+id/share_detail_symbol"
            android:text="TTM"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    <TextView
        android:id="@+id/share_detail_price"
        android:text="100"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:maxLength="5"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/share_detail_symbol"
        android:layout_toEndOf="@+id/share_detail_symbol" />

        <TextView
            android:id="@+id/share_detail_name"
            android:text="Tata Motors"
            android:textSize="25sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_below="@+id/share_detail_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    <TextView
        android:id="@+id/share_detail_exchange_per"
        android:text="2%"
        android:textSize="20sp"
        android:maxLength="4"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/share_detail_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/share_detail_exchange"
        android:text="2s"
        android:textSize="20sp"
        android:maxLength="4"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/share_detail_symbol"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/share_detail_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Days High"
            android:id="@+id/share_days_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Days low"
            android:id="@+id/share_days_low"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Book Value"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:hint="100"
            android:layout_height="wrap_content" />

        <TextView
            android:text="No of Share Own"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:hint="100"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_details"
        android:layout_below="@+id/share_detail_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="Years High"
            android:id="@+id/share_years_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Years low"
            android:id="@+id/share_years_low"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Industries"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:hint="100"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Buy Price "
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:hint="100"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/share_details"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="News"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/newslist"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </ListView>
    </LinearLayout>


</RelativeLayout>
